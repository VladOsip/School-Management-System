<Application x:Class="EasySchool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="ApplicationStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "View/Dictionaries/BaseStylesDictionary.xaml"/>
                <ResourceDictionary Source = "View/Dictionaries/TemplatesDictionary.xaml"/>
                <ResourceDictionary Source = "View/Dictionaries/ServicesDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
